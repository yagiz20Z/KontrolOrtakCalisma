#include "main.h"

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */

#include "driver_as5600.h"

/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */

#define AS5600_DEVICE_ADDRESS   0x36
#define AS5600_I2C_ADDR         (AS5600_DEVICE_ADDRESS << 1) // Yazma/Okuma için adresi sola kaydır
#define AS5600_REG_RAW_ANGLE    0x0C // Ham açı verisinin başlangıç register'ı


/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c2;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
//uint8_t RA_Buffer ;
//uint16_t ang = 0;
//as5600_handle_t sensor_handle;
//
//
//#define AS5600_I2C_ADDR       (0x36 << 1)   // I2C adresi 7-bit + 1-bit R/W
//#define AS5600_REG_ANGLE_H    0x0E
//#define AS5600_REG_ANGLE_L    0x0F
//
//uint32_t tick1;
//uint32_t tick2;
//uint32_t tickresult;
//
//float derece;

//*********************************

uint8_t i2c_rx_buffer[2];
uint16_t raw_angle;
float angle_in_degrees;
HAL_StatusTypeDef i2c_status;


/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_I2C2_Init(void);
/* USER CODE BEGIN PFP */

